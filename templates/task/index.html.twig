{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/style.css') }}"/>
	<link rel="stylesheet" href="cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
{% endblock %}

{% block title %}Liste des tâches
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center">
		<h1>Liste des tâches</h1>
	</div>

	<div class="container">

		<a href="{{ path('task_create') }}" class="btn btn-primary">Ajouter</a>

		<table class="table table-striped tabled-bordered" id="tasksTable">
			<thead>
				<th>Id</th>
				<th>Nom</th>
				<th>Description</th>
				<th>Date effective</th>
				<th>Catégories</th>
				<th></th>
				<th></th>
			</thead>
			<tbody>


				{% if tasks is defined %}
					{% for task in tasks %}
						<tr>
							<th scope="row">{{ task.id }}</th>
							<td>{{ task.name }}</td>
							<td>{{ task.description }}</td>
							<td>{{ task.dueAt | date("d/m/Y h:i") }}</td>
							<td>{{ task.tag.name }}</td>
							<td>
								<a href="{{path ('task_update',{'id':task.id})}}" class="btn btn-success">Modifier</a>
							</td>
							<td>
								<a href="{{path ('task_delete',{'id':task.id})}}" class="btn btn-danger">Supprimer</td>
							</td>
						</tr>
					{% endfor %}
				{% endif %}
			</tbody>
		</table>
	</div>

{% endblock %}

{% block javascripts %}
	<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

	<script src="//cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

	<script>
		$(document).ready(function () {
$('#tasksTable').DataTable();
});
	</script>

{% endblock %}
